<resources>

    <style name="fab_style" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>

        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">8dp</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="card_view" parent="CardView">
        <item name="cardBackgroundColor">?attr/cardview_backgroundColor</item>
        <item name="cardCornerRadius">@dimen/cardview_corner_radius</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="detail_content_cardview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/cardMarginVertical</item>
        <item name="android:layout_marginBottom">@dimen/cardMarginVertical</item>
        <item name="android:layout_marginStart">@dimen/cardMarginHorizontal</item>
        <item name="android:layout_marginEnd">@dimen/cardMarginHorizontal</item>
        <item name="cardElevation">4dp</item>
    </style>


</resources>