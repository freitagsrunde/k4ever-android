<resources>

    <style name="fab_style" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>

        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">8dp</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="card_view" parent="CardView">
        <item name="cardBackgroundColor">?attr/cardview_backgroundColor</item>
        <item name="cardCornerRadius">@dimen/cardview_corner_radius</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="detail_content_cardview" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/cardMarginVertical</item>
        <item name="android:layout_marginBottom">@dimen/cardMarginVertical</item>
        <item name="android:layout_marginStart">@dimen/cardMarginHorizontal</item>
        <item name="android:layout_marginEnd">@dimen/cardMarginHorizontal</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardCornerRadius">@dimen/cardview_corner_radius</item>
    </style>

    <style name="detail_item_section">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="borderless_button" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="detail_item_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="detail_item_content_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:maxLines">999</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MeterNumberPickerStyle">
        <item name="mnp_min">0</item>
        <item name="mnp_max">9</item>
        <item name="mnp_textColor">?android:attr/textColorPrimary</item>
        <item name="mnp_textSize">28sp</item>
        <item name="mnp_paddingHorizontal">14dp</item>
        <item name="mnp_paddingVertical">18dp</item>
    </style>

    <style name="MeterViewStyle">
        <item name="mv_numberOfFirst">3</item>
        <item name="mv_numberOfSecond">2</item>
        <item name="mv_showDivider">true</item>
        <item name="mv_dividerText">,</item>
        <item name="mv_firstColor">?attr/money_picker_firstColor</item>
        <item name="mv_secondColor">?attr/money_picker_secondColor</item>
        <item name="mv_pickerStyle">@style/MeterNumberPickerStyle</item>
    </style>


</resources>